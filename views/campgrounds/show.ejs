<%- include('../partials/header.ejs') %>

<h1><%= foundCampground.name %></h1>
<img src="<%= foundCampground.image %>" alt="">
<p><%= foundCampground.description %></p>
<br>
<p>
  <a href="/campgrounds/<%= foundCampground._id %>/comments/new" class="btn btn-success">Add New Comment</a>
</p>
<% foundCampground.comments.map((comment) => { %>
<p>
  <strong><%= comment.author %></strong> - <%= comment.text %>
  <%})%>
</p>
<div>
  <a href="/campgrounds">Back to all campgrounds</a>
</div>

<%- include('../partials/footer.ejs') %>